#!/usr/bin/env bash
# Script that checks if a file exists and prints its status

FILE="school"

if [ -e "$FILE" ]; then
    echo "school file exist but empty"
    if [ -f "$FILE" ]; then
        echo "school is a regular file"
    fi
    if [ -s "$FILE" ]; then
        echo "school file is not empty"
    fi
else
    echo "school file does not exist"
fi

