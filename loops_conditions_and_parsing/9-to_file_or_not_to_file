#!/usr/bin/env bash
#using nested if and checkfile with this script
FILE="school"
if [ -e "$FILE" ]; then
	if [ -d "$FILE" ]; then
		echo "school exists but its a directory"
	elif [ -f "$FILE" ]; then
		if [ -s "$FILE" ]; then
			echo "File exist and is a regular file"
		else 
			echo "school exists but empty"
		fi
	fi
else 
	echo "school does not exist"
fi
